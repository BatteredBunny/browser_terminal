{

  "manifest_version": 2,
  "name": "browser-terminal-extension",
  "version": "1.0",

  "description": "Allows you to open a native shell in the browser",

  "icons": {
    "512": "icons/icon.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "browser_terminal@example.org",
      "strict_min_version": "50.0"
    }
  },

  "permissions": [ "nativeMessaging" ],

  "browser_action": {
    "default_area": "navbar"
  },

  "web_accessible_resources": [
    "html/terminal.html",
    "css/common.css",
    "node_modules/common-web-styles/dist/common.css",
    "node_modules/xterm/lib/xterm.js",
    "node_modules/xterm-addon-web-links/lib/xterm-addon-web-links.js",
    "node_modules/xterm/css/xterm.css"
  ],

  "background": {
    "scripts": ["/js/background.js"]
  }
}
